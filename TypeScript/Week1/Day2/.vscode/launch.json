{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Run TypeScript (ts-node)",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}